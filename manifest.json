{
  "manifest_version": 2,

  "name": "Chrome Storage Demonstration",
  "description": "Demonstrate how to use Chrome Storage API",
  "version": "1.0",

  "background": {
    "scripts":["background.js"]
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "http://*.rhcloud.com/",
    "https://*.rhcloud.com/"
  ],

  "content_scripts": [
    {
      "matches": [
        "http://*.rhcloud.com/",
        "https://*.rhcloud.com/"
      ],
      "js": ["inject.js"],
      "run_at": "document_end"
    }
  ],

  "browser_action": {
    "default_title": "popup",
    "default_icon": "icon_19.png",
    "default_popup": "popup.html"
  }
}